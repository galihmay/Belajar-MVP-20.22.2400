<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Keliling Persegi Panjang"
        android:layout_marginTop="15dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp" >

        <EditText
            android:id="@+id/et_panjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Panjang" />

        <EditText
            android:id="@+id/et_lebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Lebar" />



        <Button
            android:id="@+id/btn_hitung_keliling_persegi_panjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F7FF00"
            android:text="Hitung keliling Persegi Panjang" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">






        <TextView
            android:id="@+id/tv_hasil_keliling_persegi_panjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="@color/purple_700"
            android:textColor="#F7FF00"
            android:text="Hasil keliling Persegi"
            android:textAlignment="center"/>



    </LinearLayout>



</LinearLayout>
