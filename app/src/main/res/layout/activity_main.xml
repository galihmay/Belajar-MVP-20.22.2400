<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="Luas Persegi Panjang"
        android:layout_marginTop="15dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp" >

        <EditText
            android:id="@+id/et_panjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Panjang" />

        <EditText
            android:id="@+id/et_lebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Masukan Lebar" />

        <Button
            android:id="@+id/btn_hitung_luas_persegi_panjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hitung luas Persegi Panjang"/>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">




        <TextView
            android:id="@+id/tv_hasil_luas_persegi_panjang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:background="@color/purple_700"
            android:textColor="@color/white"
            android:text="Hasil Luas Persegi"
            android:textAlignment="center"/>


        <Button
            android:id="@+id/btn_halaman_selanjutnya"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:text="Halaman selanjutnya" />



    </LinearLayout>


</LinearLayout>
